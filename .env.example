# Azure OpenAI Configuration (Required)
# Get these from your Azure OpenAI service configuration

# Authentication
PING_FED_URL="https://federation-qa.gsk.com/as/token.oauth2"
KGW_CLIENT_ID="your_client_id_here"
KGW_CLIENT_SECRET="your_client_secret_here"

# Azure OpenAI Endpoint and API
KGW_ENDPOINT="https://dev.api.gsk.com/co/psc/azureopenai/us6"
AOAI_API_VERSION="2025-01-01-preview"
CHAT_MODEL_DEPLOYMENT_NAME="gpt-4o"

# Optional: GPT-O3 Mini Configuration
GPT_O3_MINI_DEPLOYMENT_NAME="o3-mini"
USE_O3_MINI=false

# System Configuration
MAX_ITERATIONS=10
TEMP_SCRIPTS_DIR=temp_scripts
FILES_TO_QUERY_DIR=files_to_query
SYSTEM_PROMPT_FILE=system_prompt.txt

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Vector Database (Optional)
VECTOR_DB_TYPE=chromadb
VECTOR_DB_PATH=./vector_db

# File Storage
TEMP_DIR=./temp
MAX_FILE_SIZE_MB=100

# Security
CORS_ORIGINS=*
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Structure-First RAG Configuration (Optional)
MAX_CHUNK_SIZE=512
MIN_CHUNK_SIZE=50
CHUNK_OVERLAP=50
OCR_LANGUAGES=en
OCR_CONFIDENCE_THRESHOLD=0.6
TEXT_RATIO_THRESHOLD=0.5
SCANNED_DOC_THRESHOLD=50
